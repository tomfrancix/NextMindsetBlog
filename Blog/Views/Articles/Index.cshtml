@model IEnumerable<Blog.Models.Articles>

@{
    ViewBag.Title = "Index";
    ViewBag.Robot = "noindex, nofollow";
    ViewBag.Google = "noindex, nofollow";
    ViewBag.Bing = "noindex, nofollow";
    ViewBag.Url = "";
}
<ul class="nav nav-tabs">
    <li>@Html.ActionLink("Categories", "Index", "Categories")</li>
    <li>@Html.ActionLink("Subcategories", "Index", "Subcategories")</li>
    <li class="active">@Html.ActionLink("Articles", "Index", "Articles")</li>
    <li>@Html.ActionLink("Images", "Index", "Images")</li>
    <li>@Html.ActionLink("Imagemap", "Index", "Imagemaps")</li>
    <li>@Html.ActionLink("Tags", "Index", "Tags")</li>
    <li>@Html.ActionLink("Tagmap", "Index", "Tagmaps")</li>
    <li>@Html.ActionLink("Comments", "Index", "Comments")</li>
    <li>@Html.ActionLink("Replies", "Index", "Replies")</li>
    <li>@Html.ActionLink("Shop", "Index", "Shops")</li>
</ul><br /><br />
<h2>Articles</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Category
        </th>
        <th>
            Subcategory
        </th>
        <th>
            Status
        </th>
        <th>
            Title
        </th>
        <th>
            Image
        </th>
        <th>
            Author
        </th>
        <th>
            Author Picture
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lead)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Snippet)
        </th>
       
        <th></th>
    </tr>

    @foreach (var item in Model.Reverse())
    {
        <tr  class="articletrtd" style="max-height:200px;">
            <td>
                <a href="\Home/Category_List/@item.Categories.Cat_Id">@Html.DisplayFor(modelItem => item.Categories.Title)</a>
            </td>
            <td>
                <a href="\Home/Subcategory_List/@item.Subcategories.Cat_Id">@Html.DisplayFor(modelItem => item.Subcategories.Title)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a href="\Home/Details/@item.Art_Id">@Html.DisplayFor(modelItem => item.Title)</a>
            </td>
            <td>
                <img src="~/Content/Images/@Html.DisplayFor(modelItem => item.Image)" width="150" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author_Name)
            </td>
            <td>
                <img src="~/Content/Images/@Html.DisplayFor(modelItem => item.Author_Image)" width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <div> @Html.DisplayFor(modelItem => item.Lead)</div>
            </td>
            <td>
                <div style="width:200px; max-width:200px;">@Html.DisplayFor(modelItem => item.Snippet)</div>
            </td>
           
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Art_Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Art_Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Art_Id })
            </td>
        </tr>
        
    }

</table>
