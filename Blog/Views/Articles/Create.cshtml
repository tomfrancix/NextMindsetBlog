                // custom dropdown
                // dropdown with defaults from theme
    
                [{ 'align': [] }],
                ['link', 'image', 'video'],
                ['clean']
            ],


        },
        placeholder: 'Compose an epic...',
        theme: 'snow'  // or 'bubble'
    });
