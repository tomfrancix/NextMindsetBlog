                        finalBmr = finalBmi * 1.2;
                        break;
                    case "lightly":
                        finalBmr = finalBmi * 1.35;
                        break;
                    case "moderately":
                        finalBmr = finalBmi * 1.55;
                        break;
                    case "very":
                        finalBmr = finalBmi * 1.75;
                        break;
